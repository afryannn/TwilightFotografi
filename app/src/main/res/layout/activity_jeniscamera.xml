            <LinearLayout
                    android:id="@+id/cont4a2"
                    android:layout_toRightOf="@+id/cont4aa1"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                            app:cardCornerRadius="@dimen/_8ssp"
                            android:layout_centerInParent="true"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_width="@dimen/_90sdp">
                        <RelativeLayout
                                android:gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:id="@+id/cam8"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/kameramedium"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"/>
                            <TextView
                                    android:layout_below="@+id/cam8"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="@dimen/_10sdp"
                                    android:text="       Kamera \nMedium Format"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        //5
        <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">
            <LinearLayout

                    android:id="@+id/cont5a1"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                            app:cardCornerRadius="@dimen/_8ssp"
                            android:layout_centerInParent="true"
