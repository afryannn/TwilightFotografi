                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/kameradslr"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"/>
