<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/whiteColor"
        tools:context=".kontak">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purpledark"
            android:elevation="4dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontak"
                android:textStyle="bold"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_15sdp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_200sdp">
        <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card1nn1"
                android:layout_toRightOf="@+id/num2"
                android:layout_centerVertical="true"
                android:background="@color/whiteColor"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_100sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_5sdp">
            <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp"
                        android:text="Hubungi Kami"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="Whatsapp :"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/wa"
                            android:textSize="@dimen/_13sdp"
                            android:text=" 085640000350"
                            android:textColor="#1A4CD8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="Email :"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/em"
                            android:textSize="@dimen/_13sdp"
                            android:text="@string/email"
                            android:textColor="#1A4CD8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:background="@drawable/accentrec"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card1n1"
                android:layout_toRightOf="@+id/num2"
                android:layout_centerVertical="true"
                android:background="@color/whiteColor"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_100sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_5sdp">
            <LinearLayout
                    android:background="@drawable/accentrec"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="@dimen/_15sdp"
                        android:text="Kunjungi Kami Juga"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/_13sdp"
                            android:text="Instagram :"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/ig"
                            android:textSize="@dimen/_13sdp"
                            android:text="@string/ig"
                            android:textColor="#1A4CD8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>