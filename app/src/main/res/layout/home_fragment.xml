<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purpledark"
            android:elevation="4dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twilight Fotografi"
                android:textStyle="bold"
                android:textColor="@color/whiteColor"
                android:textSize="20dp"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
            android:layout_below="@id/my_toolbar"
            android:id="@+id/bannerhome"
            app:cardCornerRadius="0dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp">

        <ImageView
                tools:ignore="ContentDescription"
                android:src="@drawable/banner"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
        />
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical"
            android:layout_below="@id/bannerhome"
            android:background="#00000000"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_290sdp"
    >
        <RelativeLayout
                android:id="@+id/horizon1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">
            <LinearLayout
                    android:id="@+id/line1"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card1n1"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_100sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="@dimen/_8sdp">
                        <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:id="@+id/ic1"
                                    android:src="@drawable/ic1"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                    android:id="@+id/tv1"
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/ic1"
                                    android:text="   Dasar \nFotografi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                           </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/line1n2"

                    android:layout_toRightOf="@+id/line1"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_gravity="center"

                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card1n2"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_100sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="@dimen/_8sdp">

                        <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:id="@+id/ic2"
                                    android:src="@drawable/ic2"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/ic2"
                                    android:text="   Jenis \nKamera"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                    android:id="@+id/line1n3"
                    android:layout_toRightOf="@+id/line1n2"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_gravity="center"

                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card1n3"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_100sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="@dimen/_8sdp">
                        <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:id="@+id/ic3"
                                    android:src="@drawable/ic3"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/ic3"
                                    android:text="   Jenis \nFotografi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        //Horizon2
        <RelativeLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/horizon2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">
            <LinearLayout
                    android:id="@+id/line2n2"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_gravity="center"

                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card2n4"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_100sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="@dimen/_8sdp">
                        <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:id="@+id/ic4"
                                    android:src="@drawable/ic4"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/ic4"
                                    android:text="   Teknik \nFotografi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/line2n22"
                    android:layout_toRightOf="@+id/line2n2"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card2n2i"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_100sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="@dimen/_8sdp">
                        <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:id="@+id/ic5"
                                    android:src="@drawable/ic5"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/ic5"
                                    android:text="Tips / Trik"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                    android:id="@+id/line2n3"
                    android:layout_toRightOf="@+id/line2n22"
                    android:orientation="horizontal"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent">

                <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/card2n3"
                            android:background="#00000000"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_100sdp"
                            app:cardElevation="@dimen/_3sdp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="@dimen/_8sdp">
                        <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:id="@+id/ic6"
                                    android:src="@drawable/ic6"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"/>

                            <TextView
                                    android:layout_centerInParent="true"
                                    android:layout_below="@+id/ic6"
                                    android:text="Kontak"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>