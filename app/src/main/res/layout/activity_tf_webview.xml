<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        tools:context=".Tf_webview">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purpledark"
            android:elevation="4dp">
        <Button
                android:id="@+id/btnback"
                android:background="@drawable/backarrow"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_23sdp"/>
        <TextView
                android:id="@+id/texttool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/_15sdp"/>
    </androidx.appcompat.widget.Toolbar>
    <WebView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/my_toolbar"
            android:id="@+id/swebview"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_525sdp">
    </WebView>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_centerInParent="true"
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_below="@id/swebview"
            android:background="@drawable/circlerec"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/backtohome"
                android:src="@drawable/home_vec"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
    </LinearLayout>
</RelativeLayout>