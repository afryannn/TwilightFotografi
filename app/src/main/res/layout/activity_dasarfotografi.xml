<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/whiteColor"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".dasarfotografi">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purpledark"
            android:elevation="4dp">
        <Button
                android:id="@+id/btnback"
                android:background="@drawable/backarrow"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_23sdp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dasar Fotografi"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textColor="@color/whiteColor"
                android:textSize="20dp"/>
    </androidx.appcompat.widget.Toolbar>

       <LinearLayout
               android:background="@color/whiteColor"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_gravity="center"
               android:layout_width="@dimen/_280sdp"
               android:layout_height="wrap_content"
               android:orientation="vertical">
                 <RelativeLayout
                         android:id="@+id/linedas2"
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/_60sdp">
                       <TextView
                               android:id="@+id/num2"
                               android:layout_centerVertical="true"
                               android:text="1."
                               android:textColor="@color/purpledark"
                               android:textStyle="bold"
                               android:textSize="@dimen/_18sdp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>
                     <androidx.cardview.widget.CardView
                             xmlns:app="http://schemas.android.com/apk/res-auto"
                             android:id="@+id/card1n1"
                             android:layout_toRightOf="@+id/num2"
                             android:layout_centerVertical="true"
                             android:background="#00000000"
                             android:layout_width="@dimen/_280sdp"
                             android:layout_height="match_parent"
                             app:cardElevation="@dimen/_3sdp"
                             app:cardUseCompatPadding="true"
                             app:cardCornerRadius="@dimen/_5sdp">
                         <RelativeLayout
                                 android:background="@drawable/accentrec"
                                 android:layout_width="15dp"
                                 android:layout_marginLeft="5dp"
                                 android:layout_gravity="center_vertical"
                                 android:layout_height="63dp"/>
                            <LinearLayout
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                             <TextView
                                     android:textSize="@dimen/_15sdp"
                                     android:text="Sejarah Fotografi"
                                     android:textStyle="normal"
                                     android:fontFamily="sans-serif"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"/>
                            </LinearLayout>
                     </androidx.cardview.widget.CardView>
                 </RelativeLayout>

